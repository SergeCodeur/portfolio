generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  resetToken    String?
  resetTokenExp DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  imagePath   String
  link        String
  color       String
  textColor   String   @default("#FFFFFF")
  order       Int      @default(0)
  visible     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id           String   @id @default(cuid())
  title        String
  subtitle     String
  description  String
  deliverables String
  icon         String
  color        String
  examples     String[]
  order        Int      @default(0)
  visible      Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  quote     String
  name      String
  role      String
  order     Int      @default(0)
  visible   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProcessStep {
  id          String   @id @default(cuid())
  number      Int
  icon        String
  title       String
  duration    String
  detail      String?
  description String
  order       Int      @default(0)
  visible     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ExpertiseCategory {
  id          String   @id @default(cuid())
  category    String
  description String
  items       String[]
  order       Int      @default(0)
  visible     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
